<SSAM>:
  id: user_login
  wid_user:     username
  wid_pass:     password
  wid_pax_name: pax_name
  wid_pax_id:   pax_id
  wid_pax_date: pax_date
  wid_pax_tel:  pax_tel
  Screen: #login
    name: "login"
    canvas:
      Color:
        rgb: (150/255), (50/255),(160/255)
      Rectangle:
        pos: self.pos
        size: self.size
    Label:
      markup: True
      text:'[b][color=000000][size=30][font=IRS____]Sistema de Suministro Automatizado de Medicamentos[/font][/size][/color][/b]'
      pos_hint:{'center_x': 0.5, 'center_y':0.85 }
    FloatLayout:
      pos_hint:{'center_x':0.5, 'center_y': 0.45}
      size_hint: 0.6, 0.5
      canvas:
        Color:
          rgba: 1, 1, 1, 0.75
        Rectangle:
          pos: self.pos
          size: self.size
      Label:
        markup: True
        text: '[b][color=000000]USUARIO:[/color][/b]'
        pos_hint:{'center_x':.3, 'center_y':0.7}
      TextInput:
        id: username
        size_hint: 0.4, 0.1
        pos_hint:{'x':.45, 'center_y':0.7}
        multiline: False
      Label:
        markup: True
        text: '[b][color=000000]PASSWORD:[/color][/b]'
        pos_hint:{'center_x':.3, 'center_y':0.35}
      TextInput:
        id: password
        size_hint: 0.4, 0.1
        pos_hint:{'x':.45, 'center_y':0.35}
        multiline: False
        password: True
      Button:
        text: 'Ingresar'
        size_hint: 0.2, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        on_press: user_login.connect_to_drs_db(); user_login.current = user_login.wid_clientes
  Screen: #clientes
    name: "clientes"
    canvas:
      Color:
        rgb: (150/255), (50/255),(160/255)
      Rectangle:
        pos: self.pos
        size: self.size
    FloatLayout:
      pos_hint:{'center_x':0.5, 'center_y': 0.5}
      size_hint: 0.9, 0.9
      canvas:
        Color:
          rgba: 1, 1, 1, 0.60
        Rectangle:
          pos: self.pos
          size: self.size
      Label:
        markup: True
        text:'[b][color=000000][size=30][font=IRS____]Area de suministro[/font][/size][/color][/b]'
        pos_hint:{'center_x': 0.5, 'center_y':0.92 }
      #Nombre paciente
      Label:
        markup: True
        text: '[b][color=000000]Nombre paciente:[/color][/b]'
        pos_hint:{'center_x':.1, 'center_y':0.83}
      TextInput:
        id: pax_name
        size_hint: 0.2, 0.05
        pos_hint:{'x':.2, 'center_y':0.83}
        multiline: False
      #Documento
      Label:
        markup: True
        text: '[b][color=000000]Documento:[/color][/b]'
        pos_hint:{'center_x':.1, 'center_y':0.75}
      TextInput:
        id: pax_id
        size_hint: 0.2, 0.05
        pos_hint:{'x':.2, 'center_y':0.75}
        multiline: False
      #Fecha nacimiento
      Label:
        markup: True
        text: '[b][color=000000]Fecha nacimiento:[/color][/b]'
        pos_hint:{'center_x':.6, 'center_y':0.83}
      TextInput:
        id: pax_date
        size_hint: 0.2, 0.05
        pos_hint:{'x':.7, 'center_y':0.83}
        multiline: False
      #Telefono
      Label:
        markup: True
        text: '[b][color=000000]Telefono:[/color][/b]'
        pos_hint:{'center_x':.6, 'center_y':0.75}
      TextInput:
        id: pax_tel
        size_hint: 0.2, 0.05
        pos_hint:{'x':.7, 'center_y':0.75}
        multiline: False

      Button:
        text: 'Buscar'
        size_hint: 0.1, 0.05
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        on_press: user_login.check_pax()

      Button:
        text: 'Crear'
        size_hint: 0.1, 0.05
        pos_hint: {'center_x': 0.7, 'center_y': 0.1}
        on_press: user_login.new_pax()

      Button:
        text: 'Salir'
        on_press: user_login.salir(); user_login.current = user_login.wid_salir
        size_hint: 0.1, 0.05
        pos_hint: {'center_x': 0.9, 'center_y': 0.1}
